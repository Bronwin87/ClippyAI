<Application xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:ClippyAI.ViewModels"
    xmlns:local="using:ClippyAI"
    Name="ClippyAI"
    x:Class="ClippyAI.App"
    x:DataType="vm:ApplicationViewModel"
    RequestedThemeVariant="Default"
>
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available
    options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/bulb.png"
                ToolTipText="Clippy AI">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Clippy AI" Command="{Binding ShowWindow}" ToolTipText="Show Clippy AI" />
                        <NativeMenuItemSeparator />
                        <NativeMenuItem Header="Exit" Command="{Binding CloseWindow}" ToolTipText="Stop Clippy AI" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>